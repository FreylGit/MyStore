@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>@Model.Name</h4>
        <h3 style="float:right;">@Model.Price.ToString("c")</h3>
    </div>
    <div class="card-text p-1">@Model.Description</div>
    <form id="@Model.ProductId" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right;">В корзину</button>
    </form>
</div>